<footer class="">
	{% if settings.cookies %}
		<div	class="fixed bottom-0 right-0 z-2000"
				x-cloak
				x-data="{ cookies: localStorage.getItem('littleagnes_cookies') }"
				x-init="$watch('cookies', (val) => localStorage.setItem('littleagnes_cookies', val))"
				x-show="cookies !== '0'"
				x-transition:leave="transition ease-in duration-300"
				x-transition:leave-end="opacity-0 transform translate-y-3"
		>
			<div class="flex items-start max-w-lg mx-3 mb-3 bg-white rounded-lg shadow">
				<div class="px-6 py-4 text-sm leading-normal md:text-base">{{ settings.cookies | markdownToHtml | safe }}</div>
				<button class="mt-1" @click="cookies = '0'" aria-label="Close cookies notice">{{ "/_includes/assets/img/cross.svg" | svgContents("w-12") | safe }}</button>
			</div>
		</div>

		{# Delete current cookies #}
		{# <script>localStorage.removeItem('littleagnes_cookies');</script> #}
	{% endif %}

</footer>